<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
        android:id="@+id/fl_score"
        android:layout_width="match_parent"
        android:layout_height="350sp"
        >

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TEAM A"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10sp"
                />

            <TextView
                android:id="@+id/txt_teamA_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="60sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20sp"/>

            <Button
                android:id="@+id/btn_teamA_1point"
                android:layout_width="175sp"
                android:layout_height="40sp"
                android:text="+1 POINT"
                android:textColor="@color/white"
                android:backgroundTint="@color/blue"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30sp"/>

            <Button
                android:id="@+id/btn_teamA_2point"
                android:layout_width="175sp"
                android:layout_height="40sp"
                android:text="+2 POINT"
                android:textColor="@color/white"
                android:backgroundTint="@color/blue"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10sp"/>

            <Button
                android:id="@+id/btn_teamA_3point"
                android:layout_width="175sp"
                android:layout_height="40sp"
                android:text="+3 POINT"
                android:textColor="@color/white"
                android:backgroundTint="@color/blue"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10sp"/>

        </LinearLayout>

        <View
            android:layout_width="2sp"
            android:layout_height="350sp"
            android:background="@color/gray"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"/>

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10sp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TEAM B"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10sp"
                />

            <TextView
                android:id="@+id/txt_teamB_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="60sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20sp"/>

            <Button
                android:id="@+id/btn_teamB_1point"
                android:layout_width="175sp"
                android:layout_height="40sp"
                android:text="+1 POINT"
                android:textColor="@color/white"
                android:backgroundTint="@color/blue"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30sp"/>

            <Button
                android:id="@+id/btn_teamB_2point"
                android:layout_width="175sp"
                android:layout_height="40sp"
                android:text="+2 POINT"
                android:textColor="@color/white"
                android:backgroundTint="@color/blue"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10sp"/>

            <Button
                android:id="@+id/btn_teamB_3point"
                android:layout_width="175sp"
                android:layout_height="40sp"
                android:text="+3 POINT"
                android:textColor="@color/white"
                android:backgroundTint="@color/blue"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10sp"/>

        </LinearLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/btn_reset"
        android:layout_width="150sp"
        android:layout_height="50sp"
        android:layout_marginTop="40sp"
        android:layout_below="@id/fl_score"
        android:layout_centerHorizontal="true"
        android:text="Reset"
        android:textColor="@color/black"
        android:backgroundTint="@color/gray"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="@color/gray"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>